{{>header}}
<div class="container" >
    <div class="row d-flex flex-column mt-4">
        <div class="d-flex justify-content-between">
            <div id="mainImage" class="rounded-circle">
                <img src="{{user.image}}" alt="">
            </div>
            <form action="/profile/{{user.id}}/message" method="get" class="align-self-end">
                <button id="messageBtn" class="btn btn-primary btn-lg" type="submit">Message</button>
            </form>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <div>
                <h3>{{user.first_name}} {{user.last_name}}</h3>
            </div>
            <div class="d-flex flex-column">
                <div class="d-flex justify-content-between">
                    <h5 class="likesPosts">
                        <form action="/profile/{{user.id}}" method="post">
                            <span>{{user.likes}} Likes&nbsp;&nbsp;</span>
                            <button id="likeBtn" class="btn btn-primary btn-sm rounded-circle" type="submit">+</button>
                        </form>
                    </h5>
                </div>
                <div>
                    <h5 class="likesPosts">{{posts.length}} Posts</h5>
                </div>
            </div>
        </div>
        <div>
            <h5>{{user.about}}</h5>
        </div>
        <div>
            <h5>{{user.country}}</h5>
        </div>
    </div>
    <div class="row mt-4">
        <h1>All posts by {{user.first_name}}</h1>
    </div>
    <div>
    <div class="d-flex flex-column mt-4">
        {{>posts}}
    </div>
</div>