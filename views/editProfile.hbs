{{>header}}
<form action="/profile/{{user.[0].id}}/edit" method="post" id="editForm">
    <div class="form-group col-lg-12 info">
        <input type="text" class="form-control" name="image" placeholder="image" required="required" value="{{user.[0].image}}">
    </div>
    <div class="form-group col-lg-12 info">
        <input type="text" class="form-control" name="fName" id="name" placeholder="first name" required="required" value="{{user.[0].first_name}}">
    </div>
    <div class="form-group col-lg-12 info">
        <input type="text" class="form-control" name="lName" id="name" placeholder="last name" required="required" value="{{user.[0].last_name}}">
    </div>
    <div class="form-group col-lg-12 info">
        <input type="text" class="form-control" name="about" id="about" placeholder="about" required="required" value="{{user.[0].about}}">
    </div>
    <div class="form-group col-lg-12 info">
        <input type="text" class="form-control" name="country" id="country" placeholder="country" required="required" value="{{user.[0].country}}">
    </div>
    <div class="form-group col-lg-12">
        <input type="date" class="form-control" name="date" placeholder="date of birth(mm/dd/yyyy)">
    </div>
    <div id='submitBtn' class="form-group col-lg-7 info">
        <button type="submit" class="btn btn-info">Edit</button>
    </div>
</form>